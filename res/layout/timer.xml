<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
    		android:layout_centerVertical = "true"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal">

           <RelativeLayout
               android:id="@+id/timer_RelativeLayout"
               android:gravity="center"
                android:layout_width="400dp"
                android:layout_height="400dp" >
            <ImageView
                android:id="@+id/timer_btn_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_start_hover" />
            <RelativeLayout
                android:id="@+id/timer_progressload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/timer_RelativeLayout"
                android:layout_marginTop="20dp" >

                <TextView
                    android:id="@+id/timer_min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00"
                    android:textSize="50sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textSize="50sp" />

                <TextView
                    android:id="@+id/timer_sec"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00"
                    android:textSize="50sp" />
            </LinearLayout>
        </RelativeLayout>
        
        
    </RelativeLayout>

</FrameLayout>